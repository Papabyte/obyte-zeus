{
	"name": "obyte-zeus",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"bitcore-lib": "^8.1.1",
		"obyte": "0.1.4",
		"eff-diceware-passphrase": "1.0.0",
		"install": "^0.12.2",
		"node-sass": "^4.11.0",
		"npm": "^6.9.0",
		"sass-loader": "^7.1.0",
		"secp256k1": "3.6.2",
		"secrets.js-grempe": "1.1.0",
		"vue": "^2.6.10",
		"vue-router": "^3.0.1",
		"vuex-router-sync": "^5.0.0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.5.1",
		"@vue/cli-plugin-eslint": "^3.5.1",
		"@vue/cli-service": "^3.5.1",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.15.3",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-vue": "^5.0.0",
		"vue-template-compiler": "^2.6.10"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {
			"vue/require-v-for-key": 0,
			"no-console": 0,
			"indent": [
				"error",
				"tab"
			],
			"brace-style": [
				"error"
			],
			"comma-style": [
				"error"
			],
			"no-unneeded-ternary": [
				"error"
			],
			"space-infix-ops": [
				"error"
			],
			"object-property-newline": [
				"error",
				{
					"allowAllPropertiesOnSameLine": false
				}
			],
			"no-multiple-empty-lines": [
				"error"
			],
			"key-spacing": [
				"error",
				{
					"beforeColon": false
				}
			],
			"vue/html-indent": [
				"error",
				"tab",
				{
					"attribute": 1,
					"baseIndent": 1,
					"closeBracket": 0,
					"alignAttributesVertically": true,
					"ignores": []
				}
			],
			"vue/max-attributes-per-line": [
				"error",
				{
					"singleline": 5,
					"multiline": {
						"max": 1,
						"allowFirstLine": false
					}
				}
			],
			"vue/this-in-template": [
				"error",
				"never"
			]
		},
		"globals": {
			"android": "readonly"
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	]
}
